{{!< default}}

<style>
    .feed {
        -webkit-box-align: center;
        align-items: center;
        display: -webkit-box;
        display: flex;
        line-height: 1;
        overflow: hidden;
        padding: 0.8rem 0;
        position: relative;
    }

    .feed-calendar {
        color: #BF616A;
        display: -webkit-box;
        display: flex;
        font-size: 0.8rem;
        font-weight: 800;
        margin-right: 1.5rem;
        white-space: nowrap;
    }

    .postlist a {
        color: #2E3440;
        text-decoration: none;
        -webkit-transition: background 1s;
        /* For Safari 3.0 to 6.0 */
        transition: background 1s;
        /* For modern browsers */
    }

    .postlist a:hover {
        color: #2E3440;
        text-decoration: none;
        background: #D8DEE9;
    }

    .icon {
        height: 20px;
        width: 20px;
    }

    .feed-icon {
        color: #BF616A;
        height: 16px;
        position: absolute;
        right: 0;
        width: 16px;
    }
</style>

<main>
    <h3>Second brain entries</h3>
    <div class="kg-width-normal">
        {{#foreach posts}}
        <a href="{{url}}" class="postlist">
            <article class="feed">
                {{!-- Post date --}}
                <div class="feed-calendar">
                    {{date format="MMMM DD"}}
                </div>
                {{!-- Post main tag --}}
                <div>
                    <span class="badge badge-secondary">{{ tags autolink="false"}}</span>
                </div>
                {{!-- Post title --}}
                <div>
                    {{ title }}
                </div>
                {{!-- Post reading time --}}
                <div>
                    {{reading_time}}
                    <svg class="icon feed-icon">
                        <use xlink:href="#chevron-right"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32"
                                id="chevron-right">
                                <path d="M11.453 22.107L17.56 16l-6.107-6.12L13.333 8l8 8-8 8-1.88-1.893z"></path>
                            </svg></use>
                    </svg>
                </div>
            </article>
            <hr>
        </a>
        {{/foreach}}
    </div>
    {{!-- Posts pagination - loads partials/pagination.hbs --}}
    {{pagination}}
</main>